<!DOCTYPE html>
<html>
  <%- include('../partials/head', {
    title: template('search.results.title', locals.q)
  }) %>
  <body>
    <%- include('../partials/header', {
      parentLinks: [],
      title: template('search.results.title', locals.q)
    }) %>

    <main class="site-page site-page--search">
      <div id="search-page" class="g-body">
        <div class="page-inner">
          <div class="page-width">
            <div class="content__width g-upper-body">
              <%- include ../partials/search %>
            </div>
            <div class="g-main-content">
              <% if (locals.results && results.length) { %>
                <p class="search-kicker">
                  <%- template('search.results.kicker', locals.q) %>
                </p>
                <% results.forEach((res) => { %>
                  <div class="search-result">
                    <h3><a href="<%= res.path %>"><%= res.prettyName %></a></h3>
                  </div>
                <% }) %>
              <% } else { %>
                <h3 class="search-kicker">
                  <%- template('search.results.none.kicker', locals.q) %>
                </h3>
                <p><%- template('search.results.none.suggestion') %></p>
              <% } %>
            </div>
            <%- include('../partials/footer', {
              pageType: 'search'
            }) %>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
